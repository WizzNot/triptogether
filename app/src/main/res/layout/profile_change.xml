<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <EditText
        android:id="@+id/changeprofileedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="@color/zvet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeprofileedit2" />

    <TextView
        android:id="@+id/changeprofiletxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Введите ?"
        android:textAlignment="center"
        android:textColor="@color/zvet"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/profilechangeedit3"
        android:layout_width="202dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Введите"
        android:inputType="text"
        android:textColorHint="@color/zvet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeprofiletxt" />

    <Button
        android:id="@+id/changeprofilebut"
        android:layout_width="154dp"
        android:layout_height="52dp"
        android:layout_marginTop="72dp"
        android:textAllCaps="false"
        android:text="Поменять"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.689"
        app:layout_constraintStart_toEndOf="@+id/profilechangeedit3"
        app:layout_constraintTop_toBottomOf="@+id/changeprofiletxt" />

    <EditText
        android:id="@+id/changeprofileedit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="@color/zvet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilechangeedit3" />

</androidx.constraintlayout.widget.ConstraintLayout>